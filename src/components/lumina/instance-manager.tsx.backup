"use client";

import { useState, useEffect } from "react";
import { useRouter } from "next/navigation";
import { createWhatsappInstance, getConnectQR, getInstanceStatus, logoutInstanceAction, deleteInstanceAction } from "@/app/actions/whatsapp";
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Dialog, DialogContent, DialogHeader, DialogTitle, DialogTrigger } from "@/components/ui/dialog";
import { Plus, Smartphone, QrCode, RefreshCw, Trash2, CheckCircle2, AlertTriangle, ShieldCheck, ChevronRight, LogOut } from "lucide-react";
import { Checkbox } from "@/components/ui/checkbox";

export function InstanceManager({ initialInstances }: { initialInstances: any[] }) {
    const [instances, setInstances] = useState(initialInstances);
    const [newInstanceName, setNewInstanceName] = useState("");
    const [loading, setLoading] = useState(false);
    const [qrCode, setQrCode] = useState<string | null>(null);
    const [selectedInternalName, setSelectedInternalName] = useState<string | null>(null);
    const [selectedDisplayName, setSelectedDisplayName] = useState<string | null>(null);
    const [error, setError] = useState<string | null>(null);
    const [isAware, setIsAware] = useState(false);
    const [connectionStatus, setConnectionStatus] = useState<string>("disconnected");
    const [isCreationDialogOpen, setIsCreationDialogOpen] = useState(false);
    const [deleteDialogOpen, setDeleteDialogOpen] = useState(false);
    const [instanceToDelete, setInstanceToDelete] = useState<{ internalName: string, displayName: string } | null>(null);
    const router = useRouter();

    useEffect(() => {
        setInstances(initialInstances);
    }, [initialInstances]);

    useEffect(() => {
        let interval: NodeJS.Timeout;
        if (selectedInternalName && connectionStatus !== "open") {
            interval = setInterval(async () => {
                const status = await getInstanceStatus(selectedInternalName);
                if (status === "open") {
                    setConnectionStatus("open");
                    setQrCode(null);
                    router.refresh();
                    clearInterval(interval);
                }
            }, 3000);
        }
        return () => clearInterval(interval);
    }, [selectedInternalName, connectionStatus, router]);

    async function handleCreate() {
        if (!newInstanceName) return;
        setLoading(true);
        setError(null);
        const formData = new FormData();
        formData.append("name", newInstanceName);

        try {
            const res = await createWhatsappInstance(formData);
            if (res?.error) {
                setError(res.error);
            } else if (res?.instance?.instanceName) {
                setIsCreationDialogOpen(false);
                setNewInstanceName("");
                router.refresh();

                setTimeout(() => {
                    if (res.qrcode?.base64) {
                        setQrCode(res.qrcode.base64);
                        setSelectedInternalName(res.instance.instanceName);
                        setSelectedDisplayName(newInstanceName);
                        setConnectionStatus("connecting");
                        setIsAware(false);
                    } else {
                        handleConnect(res.instance.instanceName, newInstanceName);
                    }
                }, 300);
            }
        } catch (e: any) {
            setError("Falha na conexão: " + e.message);
        } finally {
            setLoading(false);
        }
    }

    async function handleConnect(internalName: string, displayName: string) {
        setSelectedInternalName(internalName);
        setSelectedDisplayName(displayName);
        setQrCode(null);
        setConnectionStatus("connecting");
        setIsAware(false);
        const res = await getConnectQR(internalName);

        if (res?.base64) {
            setQrCode(res.base64);
        } else if (res?.qrcode?.base64) {
            setQrCode(res.qrcode.base64);
        }
    }

    async function handleReconnect(internalName: string, displayName: string) {
        setLoading(true);
        try {
            await logoutInstanceAction(internalName);
            await handleConnect(internalName, displayName);
        } catch (e: any) {
            alert("Erro ao reconectar: " + e.message);
        } finally {
            setLoading(false);
        }
    }

    async function handleLogout(internalName: string) {
        if (!confirm(`Deseja realmente DESLOGAR o WhatsApp desta instância? Será necessário ler o QR Code novamente.`)) {
            return;
        }
        setLoading(true);
        try {
            const res = await logoutInstanceAction(internalName);
            if (res.success) {
                router.refresh();
            } else {
                alert("Erro ao desconectar: " + res.error);
            }
        } catch (e: any) {
            alert("Erro inesperado: " + e.message);
        } finally {
            setLoading(false);
        }
    }

    async function handleDelete(internalName: string, displayName: string) {
        if (loading) {
            console.log('[UI] Delete already in progress, ignoring');
            return;
        }

        console.log('[UI] Delete clicked:', internalName, displayName);
        if (!confirm(`ATENÇÃO: Deseja EXCLUIR permanentemente a instância "${displayName}"? Esta ação não pode ser desfeita.`)) {
            console.log('[UI] Delete cancelled');
            return;
        }

        console.log('[UI] Delete confirmed, calling action...');
        setLoading(true);
        try {
            const res = await deleteInstanceAction(internalName);
            console.log('[UI] Delete response:', res);
            if (res.success) {
                router.refresh();
            } else {
                alert("Erro ao excluir: " + res.error);
            }
        } catch (e: any) {
            alert("Erro inesperado: " + e.message);
        } finally {
            setLoading(false);
        }
    }

    return (
        <div className="grid gap-6">
            <Card className="border-[#2a2a2a] bg-[#1c1c1c] overflow-hidden">
                <CardHeader className="flex flex-row items-center justify-between pb-4 border-b border-[#2a2a2a]">
                    <div className="flex items-center gap-2">
                        <Smartphone className="w-5 h-5 text-green-500" />
                        <CardTitle className="text-lg font-medium text-white">Instâncias do WhatsApp</CardTitle>
                    </div>
                    <Dialog open={isCreationDialogOpen} onOpenChange={setIsCreationDialogOpen}>
                        <DialogTrigger asChild>
                            <Button className="bg-green-600 hover:bg-green-700 text-white font-semibold transition-all hover:scale-[1.02]">
                                <Plus className="w-4 h-4 mr-2" /> Nova Instância
                            </Button>
                        </DialogTrigger>
                        <DialogContent className="bg-[#1c1c1c] border-[#2a2a2a] text-white">
                            <DialogHeader>
                                <DialogTitle>Criar Nova Conexão</DialogTitle>
                            </DialogHeader>
                            <div className="space-y-4 py-4">
                                <div className="space-y-2">
                                    <label className="text-sm font-medium text-gray-400">Nome da Instância (Rótulo)</label>
                                    <Input
                                        placeholder="Ex: WhatsApp Vendas"
                                        value={newInstanceName}
                                        onChange={(e) => setNewInstanceName(e.target.value)}
                                        className="bg-[#2a2a2a] border-[#3a3a3a] text-white focus:border-green-500 transition-colors"
                                    />
                                    <p className="text-[10px] text-gray-500">Este nome é para sua organização interna.</p>
                                </div>
                                {error && <div className="p-3 rounded-lg bg-red-500/10 border border-red-500/20 text-red-400 text-xs">{error}</div>}
                                <Button onClick={handleCreate} disabled={loading} className="w-full bg-green-600 hover:bg-green-700 h-11 text-base font-bold">
                                    {loading ? "Configurando..." : "Criar e Gerar QR Code"}
                                </Button>
                            </div>
                        </DialogContent>
                    </Dialog>
                </CardHeader>
                <CardContent className="pt-6">
                    {instances.length === 0 ? (
                        <div className="text-center py-16 text-gray-400 border-2 border-dashed border-[#2a2a2a] rounded-2xl">
                            <Smartphone className="w-16 h-16 mx-auto mb-4 opacity-10" />
                            <p>Sem conexões ainda. Conecte seu WhatsApp para começar.</p>
                        </div>
                    ) : (
                        <div className="grid gap-4 md:grid-cols-2 lg:grid-cols-3">
                            {instances.map((inst: any) => {
                                const isConnected = inst.connectionStatus === 'open';
                                return (
                                    <div key={inst.internalName} className="p-5 rounded-2xl bg-[#232323] border border-[#2a2a2a] hover:border-green-500/30 transition-all flex flex-col justify-between shadow-lg">
                                        <div className="flex items-start justify-between mb-6">
                                            <div className="flex items-center gap-4">
                                                <div className={`p-3 rounded-xl ${isConnected ? 'bg-green-500/10' : 'bg-yellow-500/10'}`}>
                                                    <Smartphone className={`w-6 h-6 ${isConnected ? 'text-green-500' : 'text-yellow-500'}`} />
                                                </div>
                                                <div>
                                                    <h4 className="font-bold text-white text-lg">{inst.displayName || inst.name}</h4>
                                                    <p className="text-[9px] text-gray-600 font-mono mt-0.5">{inst.internalName}</p>
                                                    <div className="flex items-center gap-2 mt-1">
                                                        <span className={`h-2 w-2 rounded-full ${isConnected ? 'bg-green-500 shadow-[0_0_8px_rgba(34,197,94,0.6)]' : 'bg-yellow-500 animate-pulse'}`} />
                                                        <span className={`text-xs font-bold uppercase ${isConnected ? 'text-green-500' : 'text-yellow-500'}`}>
                                                            {isConnected ? "Conectado" : "Aguardando QR"}
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div className="flex flex-col gap-3">
                                            <div className="flex gap-2">
                                                {!isConnected ? (
                                                    <Button className="flex-1 bg-white hover:bg-gray-100 text-black font-bold h-10 rounded-xl" onClick={() => handleConnect(inst.internalName, inst.displayName || inst.name)} disabled={loading}>
                                                        <QrCode className="w-4 h-4 mr-2" /> Conectar
                                                    </Button>
                                                ) : (
                                                    <Button variant="outline" className="flex-1 border-white/5 text-white/70 hover:text-white h-10 rounded-xl font-bold" onClick={() => handleReconnect(inst.internalName, inst.displayName || inst.name)} disabled={loading}>
                                                        <RefreshCw className={`w-3 h-3 mr-2 ${loading ? 'animate-spin' : ''}`} /> Reconectar
                                                    </Button>
                                                )}
                                            </div>
                                            <div className="flex gap-2 pt-2 border-t border-white/5">
                                                {isConnected && (
                                                    <Button variant="ghost" className="flex-1 text-[10px] text-gray-500 hover:text-red-400 h-8 rounded-lg uppercase tracking-widest font-bold" onClick={() => handleLogout(inst.internalName)} disabled={loading}>
                                                        <LogOut className="w-3 h-3 mr-2" /> Deslogar
                                                    </Button>
                                                )}
                                                <Button
                                                    variant="ghost"
                                                    size="icon"
                                                    className="h-8 w-8 text-gray-600 hover:text-red-500 rounded-lg shrink-0"
                                                    onClick={(e) => {
                                                        e.stopPropagation();
                                                        handleDelete(inst.internalName, inst.displayName || inst.name);
                                                    }}
                                                    disabled={loading}
                                                >
                                                    <Trash2 className="w-3.5 h-3.5" />
                                                </Button>
                                            </div>
                                        </div>
                                    </div>
                                );
                            })}
                        </div>
                    )}
                </CardContent>
            </Card>

            {/* QR DIALOG */}
            <Dialog open={!!selectedInternalName} onOpenChange={(open: boolean) => {
                if (!open) {
                    setSelectedInternalName(null);
                    setQrCode(null);
                    setIsAware(false);
                    setConnectionStatus("disconnected");
                }
            }}>
                <DialogContent className="bg-[#161616] border-[#2a2a2a] text-white p-0 overflow-hidden rounded-3xl max-w-2xl">
                    {connectionStatus === "open" ? (
                        <div className="p-8 flex flex-col items-center text-center space-y-4">
                            <CheckCircle2 className="w-16 h-16 text-green-500" />
                            <h2 className="text-2xl font-bold">Conectado!</h2>
                            <p className="text-gray-400 text-sm">Sua instância <span className="text-white font-bold">{selectedDisplayName}</span> está ativa.</p>
                            <Button onClick={() => setSelectedInternalName(null)} className="w-full bg-green-600 h-11 font-bold">Fechar</Button>
                        </div>
                    ) : !isAware ? (
                        // STEP 1: Awareness Only
                        <div className="p-10">
                            <DialogHeader className="mb-8">
                                <DialogTitle className="flex items-center gap-3 text-2xl">
                                    <ShieldCheck className="w-7 h-7 text-orange-500" />
                                    Termo de Responsabilidade
                                </DialogTitle>
                                <p className="text-sm text-gray-400 mt-2">Instância: <span className="text-white font-semibold">{selectedDisplayName}</span></p>
                            </DialogHeader>

                            <div className="space-y-6">
                                <div className="flex items-start gap-4 p-6 bg-orange-500/10 border-2 border-orange-500/30 rounded-xl">
                                    <Checkbox
                                        id="aware-checkbox"
                                        checked={isAware}
                                        onCheckedChange={(checked) => setIsAware(checked as boolean)}
                                        className="mt-1 border-orange-500/60 data-[state=checked]:bg-orange-600 data-[state=checked]:border-orange-600 w-6 h-6"
                                    />
                                    <label htmlFor="aware-checkbox" className="text-base text-gray-300 leading-relaxed cursor-pointer">
                                        <span className="text-orange-400 font-bold text-lg">Estou ciente</span> de que esta conexão vinculará meu número de WhatsApp a esta automação.
                                        Apenas eu sou responsável pelo uso e conteúdo enviado através desta instância.
                                    </label>
                                </div>

                                <Button
                                    onClick={() => {
                                        if (isAware) {
                                            handleConnect(selectedInternalName!, selectedDisplayName!);
                                        }
                                    }}
                                    disabled={!isAware}
                                    className="w-full bg-green-600 hover:bg-green-700 disabled:bg-gray-700 disabled:text-gray-500 h-14 text-lg font-bold transition-all"
                                >
                                    {isAware ? (
                                        <>
                                            <ChevronRight className="w-6 h-6 mr-2" />
                                            Avançar para QR Code
                                        </>
                                    ) : (
                                        <>
                                            <AlertTriangle className="w-5 h-5 mr-2" />
                                            Marque o checkbox acima para continuar
                                        </>
                                    )}
                                </Button>
                            </div>
                        </div>
                    ) : (
                        // STEP 2: QR Code Display (Two Columns)
                        <div className="grid md:grid-cols-2 min-h-[500px]">
                            {/* Left Column: QR Code */}
                            <div className="bg-[#1a1a1a] p-8 flex flex-col items-center justify-center border-r border-[#2a2a2a]">
                                <h3 className="text-lg font-bold mb-6 flex items-center gap-2">
                                    <QrCode className="w-5 h-5 text-green-500" />
                                    Escaneie o QR Code
                                </h3>
                                {qrCode ? (
                                    <div className="p-4 bg-white rounded-2xl shadow-2xl">
                                        <img src={qrCode} alt="QR Code" className="w-64 h-64" />
                                    </div>
                                ) : (
                                    <div className="w-64 h-64 flex flex-col items-center justify-center space-y-3 border-2 border-dashed border-gray-700 rounded-2xl">
                                        <RefreshCw className="w-10 h-10 text-green-500 animate-spin" />
                                        <span className="text-sm text-gray-400">Gerando QR Code...</span>
                                    </div>
                                )}
                                <p className="text-xs text-gray-500 mt-6 text-center max-w-xs">
                                    Mantenha esta janela aberta até a conexão ser estabelecida
                                </p>
                            </div>

                            {/* Right Column: Instructions */}
                            <div className="p-8 flex flex-col justify-center">
                                <div className="space-y-6">
                                    <div>
                                        <h3 className="text-xl font-bold mb-2">Como conectar</h3>
                                        <p className="text-sm text-gray-400">Siga os passos no seu celular:</p>
                                    </div>

                                    <div className="space-y-4">
                                        <div className="flex items-start gap-3">
                                            <div className="w-8 h-8 rounded-full bg-green-500/20 flex items-center justify-center flex-shrink-0 mt-0.5">
                                                <span className="text-green-500 font-bold text-sm">1</span>
                                            </div>
                                            <div>
                                                <p className="text-sm font-semibold text-white">Abra o WhatsApp</p>
                                                <p className="text-xs text-gray-400 mt-1">No celular que você quer conectar</p>
                                            </div>
                                        </div>

                                        <div className="flex items-start gap-3">
                                            <div className="w-8 h-8 rounded-full bg-green-500/20 flex items-center justify-center flex-shrink-0 mt-0.5">
                                                <span className="text-green-500 font-bold text-sm">2</span>
                                            </div>
                                            <div>
                                                <p className="text-sm font-semibold text-white">Acesse Aparelhos Conectados</p>
                                                <p className="text-xs text-gray-400 mt-1">
                                                    <span className="text-green-400">Android:</span> ⋮ → Aparelhos conectados<br />
                                                    <span className="text-blue-400">iOS:</span> Ajustes → Aparelhos conectados
                                                </p>
                                            </div>
                                        </div>

                                        <div className="flex items-start gap-3">
                                            <div className="w-8 h-8 rounded-full bg-green-500/20 flex items-center justify-center flex-shrink-0 mt-0.5">
                                                <span className="text-green-500 font-bold text-sm">3</span>
                                            </div>
                                            <div>
                                                <p className="text-sm font-semibold text-white">Conectar um aparelho</p>
                                                <p className="text-xs text-gray-400 mt-1">Toque nesta opção para abrir a câmera</p>
                                            </div>
                                        </div>

                                        <div className="flex items-start gap-3">
                                            <div className="w-8 h-8 rounded-full bg-green-500/20 flex items-center justify-center flex-shrink-0 mt-0.5">
                                                <span className="text-green-500 font-bold text-sm">4</span>
                                            </div>
                                            <div>
                                                <p className="text-sm font-semibold text-white">Aponte para o QR Code</p>
                                                <p className="text-xs text-gray-400 mt-1">A conexão será feita automaticamente</p>
                                            </div>
                                        </div>
                                    </div>

                                    <div className="pt-4 border-t border-[#2a2a2a]">
                                        <div className="flex items-center gap-2 text-xs text-gray-500">
                                            <div className="h-2 w-2 rounded-full bg-yellow-500 animate-pulse"></div>
                                            Aguardando conexão...
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    )}
                </DialogContent>
            </Dialog>
        </div>
    )
}
